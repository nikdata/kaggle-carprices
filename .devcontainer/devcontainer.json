{
    "name": "${localEnv:PROJECT_NAME:used_car_prices}",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            // define arguments to be used by dockerfile during build process
            "PYTHON_VER":"3.12",
            "PYTHON_ENV":"used_car_prices",
            "SETUP_FOLDER":"req"
        }
    },
  // SPECIFIC TO VSCODE
    "customizations": {
        "settings": {
            // Define python path - based on env created in setup_env.sh
            "python.defaultInterpreterPath": "/opt/${localEnv:PROJECT_A_NAME:used_car_prices}/bin/python",
            "python.selectInterpreter": "/opt/${localEnv:PROJECT_A_NAME:used_car_prices}/bin/python",
            // Disable A/B experiments from VSCode
            "python.experiments.enabled": false,
            "workbench.enableExperiments": false,
            "jupyter.experiments.enabled": false,
            // Enable Ruff for linting
            "editor.formatOnSaveMode": false,
            "editor.defaultFormatter": "charliemarsh.ruff"
        },
        "vscode": {
            "extensions": [
                // Documentation Extensions
                "purocean.drawio-preview",
                "redhat.vscode-yaml",
                "yzhang.markdown-all-in-one",
                // Docker Supporting Extensions
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers",
                // Python Extensions
                "ms-python.python",
                "ms-toolsai.jupyter",
                "charliermarsh.ruff",
                // Github Actions
                "github.vscode-github-actions"
            ]
        }
    },
    "runArgs": [
        "--name", "used_car_prices"
    ]
}